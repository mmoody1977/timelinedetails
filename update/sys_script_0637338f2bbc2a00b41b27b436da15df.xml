    createTitleField();
    function createTitleField() {
        var titleField = String(current.tooltip_title_field);
        var gFields = new GlideRecord('x_milte_timedetail_gantt_field');
        gFields.addQuery('field_name', titleField);
        gFields.addQuery('snapshot_definition', current.sys_id);
        gFields.query();
        if (gFields.next()) {
            // Exists validate title field is checked
            if (gFields.title_field != true) {
                gFields.title_field = true;
                gFields.update();
            }
        }
        else {
            gFields.initialize();
            gFields.type = "tooltip_only";
            gFields.title_field = true;
            gFields.snapshot_definition = current.sys_id;
            gFields.field_name = titleField;
            gFields.insert();
        }
    }
